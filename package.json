{
  "name": "docola",
  "version": "0.20.19",
  "main": "dist/docola.js",
  "author": "evila <ijoec123@gmail.com>",
  "license": "MIT",
  "homepage": "https://docola.evila.me",
  "repository": {
    "type": "git",
    "url": "docola/docola.git"
  },
  "files": [
    "!__test__"
  ],
  "scripts": {
    "lib": "dvan --config build/lib.config.js",
    "dev": "yarn lib --dev --html.template __test__/index.html --public-folder __test__/public",
    "build": "yarn lib --prod",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "dvan": "^2.1.1",
    "eslint": "^5.11.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.15.3",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.5.21",
    "xo": "^0.23.0"
  },
  "dependencies": {
    "marked": "^0.5.2",
    "milligram": "^1.3.0",
    "vue": "^2.5.21",
    "vue-router": "^3.0.2",
    "vuex": "^3.0.1"
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "ignore": [
      "__test__",
      "dist"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "xo": {
    "space": true,
    "prettier": true,
    "rules": {
      "camelcase": 0,
      "array-callback-return": 1,
      "import/extensions": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-unassigned-import": 0,
      "import/no-unresolved": 0,
      "unicorn/filename-case": 0,
      "unicorn/no-abusive-eslint-disable": 0
    }
  }
}
